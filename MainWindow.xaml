<Window x:Class="WPF_Военный_округ_Батталов.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Военный_округ_Батталов"
        mc:Ignorable="d"
        Title="MilitaryDistrict" Height="550" Width="800" Icon= "/images/icon_MD.png" FontFamily="Century Gothic">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#4B5A2A"/>
        <Image Source="/images/icon_MD.png" Margin="5" HorizontalAlignment="Left"/>
        <TextBlock Text="Список военных" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Button x:Name="Back" Content="Назад" Width="130" FontSize="14" Padding="5" HorizontalAlignment="Right" Click="Back_Click"/>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>
    </Grid>
</Window>
